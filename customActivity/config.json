{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "custom",
        "configurationDisabled": false,
        "partnerApiVersion": "1.0",
        "isConfigured": true
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Custom Data Extension Activity",
            "description": "Send data to external endpoint"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [{
                "email": "{{Contact.Attribute.PreferredData.Email}}",
                "name": "{{Contact.Attribute.PreferredData.Name}}",
                "contactKey": "{{Contact.Key}}"
            }],
            "outArguments": [],
            "url": "https://customactivity.netlify.app/.netlify/functions/api/execute",
            "verb": "POST",
            "body": "",
            "header": {
                "Content-Type": "application/json"
            },
            "format": "json",
            "useJwt": true,
            "timeout": 10000,
            "retryCount": 3,
            "retryDelay": 1000
        }
    },
    "configurationArguments": {
        "applicationExtensionKey": "custom-activity",
        "save": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/save",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "publish": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/publish",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "validate": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/validate",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "stop": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/stop",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        }
    },
    "userInterfaces": {
        "configInspector": {
            "hideHeader": false,
            "size": "medium"
        },
        "configModal": {
            "height": 600,
            "width": 800,
            "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [{
                    "email": {
                        "dataType": "Text",
                        "isNullable": false,
                        "direction": "in",
                        "access": "visible"
                    },
                    "name": {
                        "dataType": "Text",
                        "isNullable": true,
                        "direction": "in",
                        "access": "visible"
                    },
                    "contactKey": {
                        "dataType": "Text",
                        "isNullable": false,
                        "direction": "in",
                        "access": "visible"
                    },
                    "endpointUrl": {
                        "dataType": "Text",
                        "isNullable": false,
                        "direction": "in",
                        "access": "visible"
                    },
                    "headers": {
                        "dataType": "Text",
                        "isNullable": true,
                        "direction": "in",
                        "access": "visible"
                    },
                    "bodyTemplate": {
                        "dataType": "Text",
                        "isNullable": true,
                        "direction": "in",
                        "access": "visible"
                    }
                }],
                "outArguments": []
            }
        }
    }
} 