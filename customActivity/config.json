{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "custom",
        "isConfigured": true
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Custom Data Extension Activity",
            "description": "Write to a Data Extension"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [{
                "email": "{{Contact.Attribute.PreferredData.Email}}",
                "name": "{{Contact.Attribute.PreferredData.Name}}",
                "contactKey": "{{Contact.Key}}"
            }],
            "outArguments": [],
            "url": "https://customactivity.netlify.app/execute",
            "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": false,
            "timeout": 10000
        }
    },
    "configurationArguments": {
        "save": {
            "url": "https://customactivity.netlify.app/save",
            "verb": "POST"
        },
        "publish": {
            "url": "https://customactivity.netlify.app/publish",
            "verb": "POST"
        },
        "validate": {
            "url": "https://customactivity.netlify.app/validate",
            "verb": "POST"
        },
        "stop": {
            "url": "https://customactivity.netlify.app/stop",
            "verb": "POST"
        }
    },
    "userInterfaces": {
        "configModal": {
            "height": 600,
            "width": 800,
            "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "email": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        },
                        "name": {
                            "dataType": "Text",
                            "isNullable": true,
                            "direction": "in"
                        },
                        "contactKey": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        },
                        "endpointUrl": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        },
                        "headers": {
                            "dataType": "Text",
                            "isNullable": true,
                            "direction": "in"
                        },
                        "bodyTemplate": {
                            "dataType": "Text",
                            "isNullable": true,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": []
            }
        }
    }
} 