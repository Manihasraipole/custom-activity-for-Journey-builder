{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "custom",
        "configurationDisabled": false,
        "partnerApiVersion": "1.0",
        "isConfigured": false
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Custom Data Extension Activity",
            "description": "Send data to external endpoint"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [],
            "outArguments": [],
            "url": "https://customactivity.netlify.app/.netlify/functions/api/execute",
            "verb": "POST",
            "body": "",
            "header": {
                "Content-Type": "application/json"
            },
            "format": "json",
            "useJwt": true,
            "timeout": 10000,
            "retryCount": 3,
            "retryDelay": 1000
        }
    },
    "configurationArguments": {
        "applicationExtensionKey": "custom-activity",
        "defaults": { "activity": "customactivity" },
        "save": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/save",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "publish": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/publish",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "validate": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/validate",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "stop": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/stop",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        }
    },
    "userInterfaces": {
        "configModal": {
            "height": 600,
            "width": 800,
            "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [
                    {
                        "endpointUrl": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        },
                        "headers": {
                            "dataType": "Text",
                            "isNullable": true,
                            "direction": "in"
                        },
                        "bodyTemplate": {
                            "dataType": "Text",
                            "isNullable": true,
                            "direction": "in"
                        },
                        "email": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        },
                        "name": {
                            "dataType": "Text",
                            "isNullable": true,
                            "direction": "in"
                        },
                        "contactKey": {
                            "dataType": "Text",
                            "isNullable": false,
                            "direction": "in"
                        }
                    }
                ],
                "outArguments": []
            }
        }
    },
    "edit": {
        "url": "https://customactivity.netlify.app/",
        "height": 600,
        "width": 800
    }
} 