{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/iconSmall.png",
        "category": "custom"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Custom Data Extension Activity",
            "description": "Send data to external endpoint"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [{
                "email": "{{Contact.Attribute.PreferredData.Email}}",
                "name": "{{Contact.Attribute.PreferredData.Name}}",
                "contactKey": "{{Contact.Key}}"
            }],
            "outArguments": [],
            "url": "https://customactivity.netlify.app/.netlify/functions/api/execute",
            "verb": "POST",
            "body": "",
            "header": {
                "Content-Type": "application/json",
                "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' www.google-analytics.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: www.google-analytics.com; font-src 'self' data:; frame-src 'self' *;"
            },
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    "configurationArguments": {
        "save": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/save",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "publish": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/publish",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "validate": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/validate",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        },
        "stop": {
            "url": "https://customactivity.netlify.app/.netlify/functions/api/stop",
            "verb": "POST",
            "useJwt": true,
            "header": {
                "Content-Type": "application/json"
            }
        }
    },
    "userInterfaces": {
        "configModal": {
            "height": 600,
            "width": 800,
            "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [],
                "outArguments": []
            }
        }
    }
} 