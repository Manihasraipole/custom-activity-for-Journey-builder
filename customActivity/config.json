{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/icon.png",
        "iconSmall": "images/icon.png",
        "category": "custom"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Data Capture Activity",
            "description": "Captures Email and Name data and sends to external endpoint"
        }
    },
    "arguments": {
        "execute": {
            "inArguments": [
                {
                    "email": "{{Contact.Attribute.PreferredData.Email}}",
                    "name": "{{Contact.Attribute.PreferredData.Name}}"
                }
            ],
            "outArguments": [],
            "url": "https://your-ngrok-url.ngrok.io/execute",
            "timeout": 10000,
            "retryCount": 3,
            "retryDelay": 1000,
            "concurrentRequests": 1
        }
    },
    "configurationArguments": {
        "save": {
            "url": "https://your-ngrok-url.ngrok.io/save"
        },
        "publish": {
            "url": "https://your-ngrok-url.ngrok.io/publish"
        },
        "validate": {
            "url": "https://your-ngrok-url.ngrok.io/validate"
        },
        "stop": {
            "url": "https://your-ngrok-url.ngrok.io/stop"
        }
    },
    "userInterfaces": {
        "configModal": {
            "height": 300,
            "width": 500,
            "fullscreen": false
        }
    }
} 